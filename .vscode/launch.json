{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for Xdebug",
        "type": "php",
        "request": "launch",
        "port": 9003,
        "pathMappings": {
          "/workspaces/dhbw-idp/idp-app": "${workspaceFolder}/idp-app"
        }
      },
      {
        "name": "Debug PHPUnit Tests",
        "type": "php",
        "request": "launch",
        "program": "${workspaceFolder}/idp-app/vendor/bin/phpunit",
        "args": [
          "--configuration",
          "${workspaceFolder}/idp-app/phpunit.xml.dist",
          "${workspaceFolder}/idp-app/tests/unit/"
        ],
        "cwd": "${workspaceFolder}/idp-app",
        "port": 9003
      }
    ]
  }
  